<%- include('./_header', {params: params}); %>
<body class="app flex-row align-items-center">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card-group">
                <div class="card p-4">
                    <div class="card-body">
                        <% if (error.length > 0) { %>
                            <div class="alert alert-danger"><%- error %></div>
                        <% } %>

                        <% if (success.length > 0) { %>
                            <div class="alert alert-success"><%- success %></div>
                        <% } %>
                        <h1>ログイン</h1>
                        <form role="form" action="/login" role="form" method="post">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="icon-user"></i>
                    </span>
                                </div>
                                <input class="form-control" type="text" placeholder="ログインID" name="loginId" required
                                       minlength="1">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="icon-lock"></i>
                    </span>
                                </div>
                                <input class="form-control" type="password" placeholder="パスワード" name="password" required
                                       minlength="1">
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-primary px-4" type="submit">Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- CoreUI and necessary plugins-->
<%- include('./_coreui_plugin') %>
</body>
<%- include('./_footer') %>
