<%- include('./_header', {params: params}); %>
<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
<%- include('./_page_header'); %>
<div class="app-body">
    <%- include('./_side_menu') %>
    <main class="main">
        <!-- Breadcrumb-->
        <ol class="breadcrumb">
        </ol>
        <div class="container-fluid">
            <div class="animated fadeIn">
                <!-- /.row-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <strong>ユーザー情報</strong> 登録
                            </div>
                            <% if (error.length > 0) { %>
                                <div class="alert alert-danger"><%- error %></div>
                            <% } %>

                            <% if (success.length > 0) { %>
                                <div class="alert alert-success"><%- success %></div>
                            <% } %>
                            <div class="card-body">
                                <form class="form-horizontal" action="" role="form" method="post">
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="text-input">ログインID</label>
                                        <div class="col-md-9">
                                            <input class="form-control" id="login-id-input" type="text" name="loginId"
                                                   placeholder="半角" pattern="[0-9a-zA-Z]+$" required>
                                            <span class="help-block">※半角英数字のみ使えます。</span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="text-input">姓名</label>
                                        <div class="col-md-9">
                                            <input class="form-control" id="operator-input" type="text" name="name"
                                                   placeholder="姓名" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="password-input">パスワード</label>
                                        <div class="col-md-9">
                                            <input class="form-control" id="password-input" type="password"
                                                   name="password" placeholder="Password"
                                                   autocomplete="new-password"
                                                   pattern="[0-9a-zA-Z]+$"
                                                   required>
                                            <span class="help-block">※半角英数字のみ使えます。</span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="selectRole">権限</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="role" name="role">
                                                <option value="operator" selected>operator</option>
                                            </select>
                                        </div>
                                    </div>
                                    <button class="btn btn-sm btn-primary" type="submit">
                                        <i class="fa fa-dot-circle-o"></i> 登録
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<!-- CoreUI and necessary plugins-->
<%- include('./_coreui_plugin') %>
<%- include('./_common_logic') %>
</body>
<%- include('./_footer') %>
